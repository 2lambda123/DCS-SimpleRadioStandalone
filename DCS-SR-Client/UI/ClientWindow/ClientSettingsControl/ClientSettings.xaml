                                      Grid.Row="5"
                                      Grid.Column="1"
                                      Width="215"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Top"
                                      ItemsSource="{Binding IntercomTransmissionEnd}"
                                      SelectedItem="{Binding SelectedIntercomTransmissionEndEffect, Mode=TwoWay}" />

                            <Label Grid.Row="6"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Radio Encryption Effects Requires Tx or Rx Effects on" />

