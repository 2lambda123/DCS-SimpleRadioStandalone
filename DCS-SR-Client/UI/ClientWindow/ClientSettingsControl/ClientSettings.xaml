<UserControl x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.ClientSettingsControl.ClientSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:clientSettingsControl="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.ClientSettingsControl"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <clientSettingsControl:ClientSettingsViewModel />
    </UserControl.DataContext>
    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
        <StackPanel>
            <GroupBox Header="Global Settings">
             <StackPanel>
                 <GroupBox Header="Auto Connect">
                          <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />

                        </Grid.RowDefinitions>
                    
                  <Label Grid.Row="0"
                         Grid.Column="0"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Content="Auto Connect" />

                  <clientSettingsControl:SettingsToggleControl
                      Grid.Row="0"
                      Grid.Column="1"
                      ToggleValue="{Binding AutoConnect, Mode=TwoWay}" />
                  
                  <Label Grid.Row="1"
                         Grid.Column="0"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Content="Auto Connect Prompt" />

                  <clientSettingsControl:SettingsToggleControl
                      Grid.Row="1"
                      Grid.Column="1"
                      ToggleValue="{Binding AutoConnectPrompt, Mode=TwoWay}" />
                  
                  <Label Grid.Row="2"
                         Grid.Column="0"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Content="Auto Connect Mismatch Prompt" />

                  <clientSettingsControl:SettingsToggleControl
                      Grid.Row="2"
                      Grid.Column="1"
                      ToggleValue="{Binding AutoConnectMismatchPrompt, Mode=TwoWay}" />

                    </Grid>
                 </GroupBox>
                 <GroupBox Header="SRS Interface">
                     <Grid>
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="2*" />
                             <ColumnDefinition Width="2*" />

                         </Grid.ColumnDefinitions>
                         <Grid.RowDefinitions>
                             <RowDefinition />
                             <RowDefinition />
                             <RowDefinition />
                             <RowDefinition />
                             <RowDefinition />
                             <RowDefinition />
                         </Grid.RowDefinitions>
                         
                         <Label Grid.Row="0"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Reset Overlay" />

                         <Button
                             Grid.Row="0"
                             Grid.Column="1"
                             Content="Reset"
                             Command="{Binding ResetOverlayCommand}" />
                         
                         <Label Grid.Row="1"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Hide Overlay Taskbar Item" />

                         <clientSettingsControl:SettingsToggleControl
                             Grid.Row="1"
                             Grid.Column="1"
                             ToggleValue="{Binding RadioOverlayTaskbarHide, Mode=TwoWay}" />
                         
                         <Label Grid.Row="2"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Auto Refocus DCS" />

                         <clientSettingsControl:SettingsToggleControl
                             Grid.Row="2"
                             Grid.Column="1"
                             ToggleValue="{Binding RefocusDCS, Mode=TwoWay}" />
                         
                             
                         <Label Grid.Row="3"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Minimise to tray" />

                         <clientSettingsControl:SettingsToggleControl
                             Grid.Row="3"
                             Grid.Column="1"
                             ToggleValue="{Binding MinimiseToTray, Mode=TwoWay}" />
                         
                         <Label Grid.Row="4"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Start minimised" />

                         <clientSettingsControl:SettingsToggleControl
                             Grid.Row="4"
                             Grid.Column="1"
                             ToggleValue="{Binding StartMinimised, Mode=TwoWay}" />
                         
                         <Label Grid.Row="5"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Show Transmitter Name (Requires Server ON too)" />

                         <clientSettingsControl:SettingsToggleControl
                             Grid.Row="5"
                             Grid.Column="1"
                             ToggleValue="{Binding ShowTransmitterName, Mode=TwoWay}" />
                     </Grid>
                 </GroupBox>
                 <GroupBox Header="Microphone"> <Grid>
                     <Grid.ColumnDefinitions>
                         <ColumnDefinition Width="2*" />
                         <ColumnDefinition Width="2*" />

                     </Grid.ColumnDefinitions>
                     <Grid.RowDefinitions>
                         <RowDefinition />
                         <RowDefinition />
                         <RowDefinition />
                         <RowDefinition />
                     </Grid.RowDefinitions>
                     
                     <Label Grid.Row="0"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="Microphone Automatic Gain Control" />

                     <clientSettingsControl:SettingsToggleControl
                         Grid.Row="0"
                         Grid.Column="1"
                         ToggleValue="{Binding MicAGC, Mode=TwoWay}" />
                     
                     <Label Grid.Row="1"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="Microphone Noise Suppression" />

                     <clientSettingsControl:SettingsToggleControl
                         Grid.Row="1"
                         Grid.Column="1"
                         ToggleValue="{Binding MicDenoise, Mode=TwoWay}" />
                         
                 </Grid></GroupBox>
                 <GroupBox Header="Intercom Hot Mic Voice Detection">
                     <Grid>
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="2*" />
                             <ColumnDefinition Width="2*" />

                         </Grid.ColumnDefinitions>
                         <Grid.RowDefinitions>
                             <RowDefinition />
                             <RowDefinition />
                             <RowDefinition />
                             <RowDefinition />
                         </Grid.RowDefinitions>
                         
                         <Label Grid.Row="0"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Use Voice Detection (VOX) on Intercom Hot Mic" />

                         <clientSettingsControl:SettingsToggleControl
                             Grid.Row="0"
                             Grid.Column="1"
                             ToggleValue="{Binding VOX, Mode=TwoWay}" />
                         
                         <Label Grid.Row="1"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Voice Detection minimum transmission length(ms)" />
                         
                         <StackPanel Grid.Row="1"
                                     Grid.Column="1" Margin="10">

                             <Slider 
                                     TickPlacement="BottomRight"
                                     SmallChange="100"
                                     LargeChange="200"
                                     IsSnapToTickEnabled="True"
                                     TickFrequency="100"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Maximum="2000"
                                     Value="{Binding VOXMinimumTime}"
                                     Minimum="0"
                                     IsEnabled="True" />
                             <Grid>
                                 <Grid.ColumnDefinitions>
                                     <ColumnDefinition Width="*" />
                                     <ColumnDefinition Width="*" />
                                     <ColumnDefinition Width="*" />
                                 </Grid.ColumnDefinitions>
                                 <Label Grid.Column="0" FontSize="10" Content="0" HorizontalAlignment="Left" />
                                 <Label Grid.Column="1" FontSize="10" Content="1000" HorizontalAlignment="Center" />
                                 <Label Grid.Column="2" FontSize="10" Content="2000"
                                        HorizontalAlignment="Right" />
                             </Grid>
                         </StackPanel>
                         
                         <Label Grid.Row="2"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Voice Detection Sensitivity" />

                         <StackPanel Grid.Row="2"
                                     Grid.Column="1" Margin="10">

                                        <Slider x:Name="VOXMode"
                                                TickPlacement="BottomRight"
                                                SmallChange="1"
                                                LargeChange="1"
                                                IsSnapToTickEnabled="True"
                                                TickFrequency="1"
                                                VerticalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                Maximum="3"
                                                Value="{Binding VOXMode}"
                                                Minimum="0"
                                                ToolTip="The higher the sensitivity the less likely voice will be missed, but the higher the chance of a false positive "
                                                IsEnabled="True" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" FontSize="10" Content="Higher" HorizontalAlignment="Left" />
                                            <Label Grid.Column="3" FontSize="10" Content="Lower" HorizontalAlignment="Right" />
                                        </Grid>

                                    </StackPanel>

                                    <Label Grid.Row="3"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="Voice Detection Threshold" />

                                    <StackPanel Grid.Row="3"
                                                Grid.Column="1" Margin="10">

                                        <Slider x:Name="VOXMinimumRMS"
                                                TickPlacement="BottomRight"
                                                SmallChange="2"
                                                LargeChange="4"
                                                IsSnapToTickEnabled="True"
                                                TickFrequency="4"
                                                VerticalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                Maximum="0"
                                                Value="{Binding VOXMinimumDB}"
                                                Minimum="-96"
                                                IsEnabled="True" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" FontSize="10" Content="Lower" HorizontalAlignment="Left" />
                                            <Label Grid.Column="2" FontSize="10" Content="Higher"
                                                   HorizontalAlignment="Right" />
                                        </Grid>
                                    </StackPanel>

                         
                     </Grid>
                 </GroupBox>
                 <GroupBox Header="Recording"> <Grid>
                     <Grid.ColumnDefinitions>
                         <ColumnDefinition Width="2*" />
                         <ColumnDefinition Width="2*" />
                         
                         

                     </Grid.ColumnDefinitions>
                     <Grid.RowDefinitions>
                         <RowDefinition />
                         <RowDefinition />
                         <RowDefinition />
                         <RowDefinition />
                         <RowDefinition />
                     </Grid.RowDefinitions>
                     
                         <Label Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Allow Transmissions To Be Recorded" />

                         <clientSettingsControl:SettingsToggleControl
                             Grid.Row="0"
                             Grid.Column="1"
                             ToggleValue="{Binding AllowRecording, Mode=TwoWay}" />
                         
                                    <Label Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Record Transmissions" />

                         <clientSettingsControl:SettingsToggleControl
                             Grid.Row="1"
                             Grid.Column="1"
                             ToggleValue="{Binding RecordAudio, Mode=TwoWay}" />

                                    <Label Grid.Row="2"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Record to Single File" />

                         <clientSettingsControl:SettingsToggleControl
                             Grid.Row="2"
                             Grid.Column="1"
                             ToggleValue="{Binding SingleFileMixdown, Mode=TwoWay}" />

                                    <Label Grid.Row="3"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Recording Quality" />
                                    <StackPanel Grid.Row="3"
                                                Grid.Column="1" Margin="10">

                                        <Slider x:Name="RecordingQuality"
                                                TickPlacement="BottomRight"
                                                SmallChange="1"
                                                LargeChange="3"
                                                IsSnapToTickEnabled="True"
                                                TickFrequency="1"
                                                VerticalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                Maximum="9"
                                                Value="{Binding RecordingQuality}"
                                                Minimum="0"
                                                IsEnabled="True"
                                                ToolTip="Quality can only be set if Record Transmissions is set to off"
                                                ToolTipService.ShowOnDisabled="True"
                                                />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" FontSize="10" Content="0 - Highest" HorizontalAlignment="Left" />
                                            <Label Grid.Column="1" FontSize="10" Content="Lowest - 9"
                                                   HorizontalAlignment="Right" />
                                        </Grid>
                                    </StackPanel>

                                    <Label Grid.Row="4"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Record Tone for Disallowed Audio" />
                         <clientSettingsControl:SettingsToggleControl
                             Grid.Row="4"
                             Grid.Column="1"
                             ToggleValue="{Binding DisallowedAudioTone, Mode=TwoWay}" />
                         
                 </Grid></GroupBox>
                 <GroupBox Header="Miscellaneous Settings">
                      <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />

                    </Grid.RowDefinitions>

                  
      <Label Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Auto Select Profile For Aircraft" />

                                  
      <clientSettingsControl:SettingsToggleControl
          Grid.Row="0"
          Grid.Column="1"
          ToggleValue="{Binding AutoSelectSettingsProfile, Mode=TwoWay}" />

                                    <Label Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Check for beta updates" />

      <clientSettingsControl:SettingsToggleControl
          Grid.Row="1"
          Grid.Column="1"
          ToggleValue="{Binding CheckForBetaUpdates, Mode=TwoWay}" />
                                    <Label Grid.Row="2"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Set SRS Path for DCS" />

                                    <Button Grid.Row="2"
                                    Grid.Column="1"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Command="{Binding SetSRSPathCommand}"
                                    Content="Set Path" />

                                    <Label Grid.Row="3"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Require Admin" />

      <clientSettingsControl:SettingsToggleControl
          Grid.Row="3"
          Grid.Column="1"
          ToggleValue="{Binding RequireAdmin, Mode=TwoWay}" />
      
                                    <Label Grid.Row="4"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Allow VAICOM TX Inhibit" />

      <clientSettingsControl:SettingsToggleControl
          Grid.Row="4"
          Grid.Column="1"
          ToggleValue="{Binding VAICOMTXInhibitEnabled, Mode=TwoWay}" />

                             

                                    <Label Grid.Row="5"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="Allow More Controller Input Devices" />
      
      <clientSettingsControl:SettingsToggleControl
          Grid.Row="5"
          Grid.Column="1"
          ToggleValue="{Binding AllowMoreInputs, Mode=TwoWay}" />


                                    <Label Grid.Row="6"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="Allow XInput Controller (Xbox controller)" />

      <clientSettingsControl:SettingsToggleControl
          Grid.Row="6"
          Grid.Column="1"
          ToggleValue="{Binding AllowXInputController, Mode=TwoWay}" />
      
                                    <Label Grid.Row="7"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="Play connection sounds" />

      <clientSettingsControl:SettingsToggleControl
          Grid.Row="7"
          Grid.Column="1"
          ToggleValue="{Binding PlayConnectionSounds, Mode=TwoWay}" />

                </Grid>

                 </GroupBox>
             </StackPanel>

               
            </GroupBox>
            <GroupBox Header="Profile">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                    <ComboBox x:Name="ControlsProfile"
                              Width="200"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Top" Margin="5" Padding="5"
                              SelectedItem="{Binding SelectedProfile, Mode=TwoWay}"
                              ItemsSource="{Binding AvailableProfiles, Mode=TwoWay}" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Margin="5" Padding="5" Content="Create Profile"
                                Command="{Binding CreateProfileCommand}" />
                        <Button Margin="5" Padding="5" Content="Copy Profile" Command="{Binding CopyProfileCommand}" />
                        <Button Margin="5" Padding="5" Content="Rename Profile"
                                Command="{Binding RenameProfileCommand}" />
                        <Button Margin="5" Padding="5" Content="Delete Profile"
                                Command="{Binding DeleteProfileCommand}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Profile Settings">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <GroupBox Header="Controls / Integration Settings"
                              Grid.Row="0"
                              Grid.Column="0"
                              Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                               <Label Grid.Row="0"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="Radio Switch works as Push To Talk (PTT)" />

                               <clientSettingsControl:SettingsToggleControl
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   ToggleValue="{Binding RadioSwitchIsPTT, Mode=TwoWay}" />


                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="Auto Select First Channel Preset" />

                               <clientSettingsControl:SettingsToggleControl
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   ToggleValue="{Binding AutoSelectChannel, Mode=TwoWay}" />

                                    <Label Grid.Row="2"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="ALWAYS allow SRS Hotkeys" />

                               <clientSettingsControl:SettingsToggleControl
                                   Grid.Row="2"
                                   Grid.Column="1"
                                   ToggleValue="{Binding AlwaysAllowHotasControls, Mode=TwoWay}" />
                               
                                    <Label Grid.Row="3"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="ALWAYS allow Transponder Overlay Controls" />

                               <clientSettingsControl:SettingsToggleControl
                                   Grid.Row="3"
                                   Grid.Column="1"
                                   ToggleValue="{Binding AlwaysAllowTransponderOverlay, Mode=TwoWay}" />

                                    <Label Grid.Row="4"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="Allow INCOCKPIT DCS Controlled PTT" />

                               <clientSettingsControl:SettingsToggleControl
                                   Grid.Row="4"
                                   Grid.Column="1"
                                   ToggleValue="{Binding AllowDCSPTT, Mode=TwoWay}" />

                                    <Label Grid.Row="5"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="Rotary Style Frequency Increment/Decrement" />

                               <clientSettingsControl:SettingsToggleControl
                                   Grid.Row="5"
                                   Grid.Column="1"
                                   ToggleValue="{Binding RotaryStyleIncrement, Mode=TwoWay}" />
                               
                                    <Label Grid.Row="6"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="Push to Talk Release Delay (ms) - SRS Hotkeys only" />

                                    <StackPanel Grid.Row="6"
                                                Grid.Column="1" Margin="10">

                                        <Slider x:Name="PTTReleaseDelay"
                                                TickPlacement="BottomRight"
                                                SmallChange="20"
                                                LargeChange="50"
                                                IsSnapToTickEnabled="True"
                                                TickFrequency="50"
                                                VerticalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                Maximum="1000"
                                                Value="{Binding PTTReleaseDelay}"
                                                Minimum="0"
                                                IsEnabled="True" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" FontSize="10" Content="0" HorizontalAlignment="Left" />
                                            <Label Grid.Column="1" FontSize="10" Content="500"
                                                   HorizontalAlignment="Center" />
                                            <Label Grid.Column="2" FontSize="10" Content="1000"
                                                   HorizontalAlignment="Right" />
                                        </Grid>

                                    </StackPanel>

                                    <Label Grid.Row="7"
                                           Grid.Column="0"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="Push to Talk Start Delay (ms) - SRS Hotkeys only" />

                                    <StackPanel Grid.Row="7"
                                                Grid.Column="1" Margin="10">

                                        <Slider x:Name="PTTStartDelay"
                                                TickPlacement="BottomRight"
                                                SmallChange="20"
                                                LargeChange="50"
                                                IsSnapToTickEnabled="True"
                                                TickFrequency="50"
                                                VerticalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                Maximum="1000"
                                                Value="{Binding PTTStartDelay}"
                                                Minimum="0"
                                                IsEnabled="True" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" FontSize="10" Content="0" HorizontalAlignment="Left" />
                                            <Label Grid.Column="1" FontSize="10" Content="500 "
                                                   HorizontalAlignment="Center" />
                                            <Label Grid.Column="2" FontSize="10" Content="1000"
                                                   HorizontalAlignment="Right" />
                                        </Grid>

                                    </StackPanel>
                               
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Radio Effect Settings"
                              Grid.Row="1"
                              Grid.Column="0"
                              Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>


                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Radio Rx Effects" />

                            <WrapPanel Grid.Row="0"
                                       Grid.Column="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Orientation="Horizontal">
                                <Label>Start</Label>

                                <clientSettingsControl:SettingsToggleControl
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    ToggleValue="{Binding RadioRxStartToggle, Mode=TwoWay}" />

                                <Label Content="End" />
                                <clientSettingsControl:SettingsToggleControl
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    ToggleValue="{Binding RadioRxEndToggle, Mode=TwoWay}" />

                            </WrapPanel>


                            <Label Grid.Row="1"
                                   Grid.Column="0"

                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Radio Tx Effects" />

                            <WrapPanel Grid.Row="1"
                                       Grid.Column="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Orientation="Vertical">
                                <WrapPanel Orientation="Horizontal">
                                    <Label>Start</Label>

                                    <clientSettingsControl:SettingsToggleControl
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        ToggleValue="{Binding RadioTxStartToggle, Mode=TwoWay}" />
                                    <Label Content="End" />
                                    <clientSettingsControl:SettingsToggleControl
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        ToggleValue="{Binding RadioTxEndToggle, Mode=TwoWay}" />
                                </WrapPanel>

                            </WrapPanel>

                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Radio Transmit Start Effect" />

                            <ComboBox 
                                      Grid.Row="2"
                                      Grid.Column="1"
                                      Width="215"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Top"
                                      ItemsSource="{Binding RadioTransmissionStart}"
                                      SelectedItem="{Binding SelectedRadioTransmissionStartEffect, Mode=TwoWay}" />

                            <Label Grid.Row="3"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Radio Transmit End Effect" />

                            <ComboBox 
                                      Grid.Row="3"
                                      Grid.Column="1"
                                      Width="215"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Top"
                                      ItemsSource="{Binding RadioTransmissionEnd}"
                                      SelectedItem="{Binding SelectedRadioTransmissionEndEffect, Mode=TwoWay}" />
                            
                            <Label Grid.Row="4"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Intercom Transmit Start Effect" />

                            <ComboBox x:Name="RadioStartTransmitEffect"
                                      Grid.Row="4"
                                      Grid.Column="1"
                                      Width="215"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Top"
                                      ItemsSource="{Binding IntercomTransmissionStart}"
                                      SelectedItem="{Binding SelectedIntercomTransmissionStartEffect, Mode=TwoWay}" />

