                                Grid.Row="6"
                                Grid.Column="1"
                                ToggleValue="{Binding EncryptionEffects, Mode=TwoWay}" />
                            
                            <Label Grid.Row="7"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="MIDS Tx &amp; Rx Effect Requires Tx or Rx Effects On" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="7"
                                Grid.Column="1"
                                ToggleValue="{Binding MidsEffects, Mode=TwoWay}" />

                            <Label Grid.Row="8"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Enable Radio Voice Effect" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="8"
                                Grid.Column="1"
                                ToggleValue="{Binding RadioSoundEffectsToggle, Mode=TwoWay}" />

                            <Label Grid.Row="9"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
