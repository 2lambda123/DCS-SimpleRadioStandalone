                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="Radio 1 Audio Channel" />
                            <clientSettingsControl:RadioChannelConfigUi x:Name="Radio1Config"
                                                        Grid.Row="0"
                                                        Grid.Column="1"
