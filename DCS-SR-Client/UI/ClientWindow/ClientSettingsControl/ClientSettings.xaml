                            <clientSettingsControl:RadioChannelConfigUi x:Name="Radio6Config"
                                                        Grid.Row="5"
                                                        Grid.Column="1"
                                                        VolumeValue="{Binding RadioChannel6, Mode=TwoWay}" />
                            <Label Grid.Row="6"
                                   Grid.Column="0"
